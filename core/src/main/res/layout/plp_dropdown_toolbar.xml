<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/spinner_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:elevation="0.0dip"
        android:orientation="horizontal"
        android:weightSum="3.0">

    <Spinner
            android:id="@+id/spinner_sort"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/spinner_product_listing_with_arrow"
            android:dropDownWidth="match_parent" />

    <Spinner
            android:id="@+id/spinner_view"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/spinner_product_listing_with_arrow"
            android:dropDownWidth="match_parent" />

    <LinearLayout
            android:id="@+id/filter"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/spinner_product_listing_no_arrow"
            android:gravity="center"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/product_listing_filter"
                android:textSize="@dimen/text_16" />
    </LinearLayout>
</LinearLayout>